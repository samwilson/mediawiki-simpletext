{
	"name": "SimpleText",
	"version": "1.2.0",
	"author": "Sam Wilson",
	"url": "https://samwilson.id.au/SimpleText_MediaWiki_skin",
	"descriptionmsg": "simpletext-desc",
	"namemsg": "skinname-simpletext",
	"license-name": "GPL-3.0+",
	"type": "skin",
	"requires": {
		"MediaWiki": ">= 1.40.0"
	},
	"ValidSkinNames": {
		"simpletext": {
			"class": "SkinMustache",
			"args": [
				{
					"name": "simpletext",
					"responsive": true,
					"styles": [
						"skins.simpletext"
					],
					"messages": [
						"sitetitle"
					]
				}
			]
		}
	},
	"MessagesDirs": {
		"SimpleText": [
			"i18n"
		]
	},
	"ResourceModules": {
		"skins.simpletext": {
			"styles": {
				"resources/libraries/normalize.css": {
					"media": "screen"
				},
				"resources/style.less": {
					"media": "all"
				},
				"resources/print.less": {
					"media": "print"
				}
			}
		}
	},
	"ResourceModuleSkinStyles": {
		"simpletext": {
			"+ext.echo.styles.badge": "resources/extensions/Echo.less"
		}
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteSkinPath": "SimpleText"
	},
	"AutoloadClasses": {
		"SimpleTextTemplate": "includes/SimpleTextTemplate.php"
	},
	"manifest_version": 2
}
